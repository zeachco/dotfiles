// Noctis Bordo theme for Zellij
// Based on VS Code's Noctis Bordo by Liviu Schera
// With red accents for borders and tabs

themes {
  noctis-bordo {
    bg "#322a2d"
    fg "#cbbec2"
    red "#e66533"       // Used for active tabs and borders
    green "#49e9a6"
    blue "#49ace9"
    yellow "#e4b781"
    magenta "#df769b"   // Used for focused elements
    orange "#e66533"    // Orange mapped to red for consistency
    cyan "#49d6e9"
    black "#47393e"
    white "#b9acb0"
  }
}
